{
  "manifest_version": 3,
  "name": "SecPass - Secure Password Generator",
  "version": "1.0.0",
  "description": "Generate secure passwords locally with customizable options.",
  "action": {
    "default_title": "SecPass",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "clipboardWrite"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "minimum_chrome_version": "109"
}
